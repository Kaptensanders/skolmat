{
  "name": "hass-skolmat-dev",
  /* "image": "kaptensanders/hass-custom-devcontainer", */
  "image": "hass_dev_image",
  "postCreateCommand": "sudo -E ENV_FILE=/workspace/.devcontainer/setup.env container setup-project",
  "containerEnv": {
    "DEVCONTAINER": "1"
  },
  "forwardPorts": [8123],
  "mounts": [
    "source=${localWorkspaceFolder},target=/config/workspace,type=bind",
    "source=${localWorkspaceFolder}/test,target=/config/test,type=bind",
    "source=${localWorkspaceFolder}/test/append_ha_config.yaml,target=/config/append_ha_config.yaml,type=bind",
    "source=${localWorkspaceFolder}/custom_components/skolmat,target=/config/custom_components/skolmat,type=bind"
  ],
  "workspaceFolder": "/config/",
  "runArgs": ["--name", "hass-skolmat-dev"],
  "customizations":{
    "vscode": {  
    }
  }
}
