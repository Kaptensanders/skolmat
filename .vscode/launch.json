  "version": "0.2.0",
  "configurations": [
    {
      "name": "Home Assistant",
      "type": "python",
      "request": "launch",
      "module": "homeassistant",
      "justMyCode": false,
      "args": ["--debug", "-c", "ha_config"],
    },

    {
      "name": "Attach to Home Assistant",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "port": 5678,
        "host": "localhost"
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/custom_components/skolmat",
          "remoteRoot": "/workspaces/skolmat/custom_components/skolmat"
        },
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/workspaces/skolmat"
        }
      ]
    }
    
  ]
}
